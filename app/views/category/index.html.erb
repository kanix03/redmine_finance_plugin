<h2>Categories</h2>
<div style="float: right">
<%= link_to 'New category', new_category_path() %>
</div>

<table>
<% @cat.each do |c| %>
<tr>
	<td><%= c.name %></td>
	<td><%= c.payments %></td>
	<td><%= link_to(image_tag('edit.png', :style => 'vertical-align: middle;'), edit_category_path(c)) %></td>	
	<td><%= link_to image_tag('delete.png', :style => 'vertical-align: middle;'), delete_category_path(:id => c.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
<%end%>
</table>
